<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CFFEB3B"
    tools:context=".PlanerActivity">


   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recyclerView_planer"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginTop="50dp"
       android:layout_marginBottom="50dp"
       android:clipToPadding="false"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recycler_view_MenuBar"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       tools:layout_editor_absoluteX="0dp"
       tools:layout_editor_absoluteY="0dp" />

   <Button
       android:id="@+id/buttonMenuBar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:backgroundTint="#FF9800"
       android:text="Menu"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/buttonBack"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:backgroundTint="#FF5722"
       android:text="Go back"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/buttonAddPlaner"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:backgroundTint="#FF9800"
       android:text="Add activity"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/buttonDelete"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="5dp"
       android:backgroundTint="#DD1111"
       android:text="Delete"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/buttonBack"
       app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>