<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Jaśniejszy główny kolor -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#FFA500" /> <!-- Ciemniejszy kolor obramowania -->
        </shape>
    </item>
    <item android:bottom="2dp" android:right="2dp"> <!-- Zmniejszony cień -->
        <shape android:shape="rectangle">
            <solid android:color="#FFA500" /> <!-- Ciemniejszy kolor cienia -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>


